<h3>{{viewTitle}}</h3>

<form action="/users/logowanie" method="POST" autocomplete="off">
    <input type="hidden" name="userId" value="{{newUser.id}}">
    <div class="form-group">
        <label>Login</label>
        <input type="text" class="form-control" name="email" placeholder="e-mail" value="{{newUser.email}}">
    </div>
    <div class="form-group">
        <label>Hasło</label>
        <input type="password" class="form-control" name="password" placeholder="Hasło" value="{{newUser.password}}">
    </div>
    <div class="form-group">
        <button type="submit" class="btn  btn-outline-primary">Zaloguj</button>
        <a class="btn  btn-outline-secondary" href="/">Powrót</a>
    </div>

</form>